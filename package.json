{
    "name": "@goparrot/clover-api-client",
    "version": "0.0.4",
    "description": "Typescript library which implements Clover API",
    "main": "src/index.ts",
    "lint-staged": {
        "*.{ts,js,json}": [
            "npm run format:base"
        ],
        "*.{md}": [
            "npm run prettier:base"
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "scripts": {
        "commit": "git-cz",
        "prepare": "husky install",
        "pre:commit": "git add . && npm run format:staged && npm run typecheck && npm run lint && npm run coverage",
        "prettier": "npm run prettier:base -- '**/**.+(md)'",
        "prettier:base": "prettier --ignore-path .eslintignore --write",
        "format": "npm run prettier && npm run lint -- --fix",
        "format:base": "npm run lint:base -- --fix",
        "format:staged": "git add . && lint-staged --allow-empty -q",
        "lint": "npm run lint:base -- './**/**.{ts,js,json}'",
        "lint:base": "npm run lint:config:check && eslint",
        "lint:config:check": "eslint-config-prettier src/index.ts",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "publish": "npm run build:dist && node bin/prepublish.js && npm publish dist",
        "publish:dev": "npm run publish --tag dev",
        "publish:dev:dry": "npm run publish:dev --dry-run",
        "build:dist": "rm -rf dist/* && tsc --project tsconfig.build.json",
        "test": "jest --runInBand",
        "coverage": "npm run test -- --coverage"
    },
    "keywords": [],
    "author": "GoParrot",
    "license": "ISC",
    "peerDependencies": {
        "axios": ">=0.21.1",
        "axios-retry": "^3.1.9",
        "class-transformer": "0.3.1",
        "deepmerge": "^4.2.2",
        "qs": ">=6.10.1",
        "reflect-metadata": "^0.1.13"
    },
    "devDependencies": {
        "@babel/plugin-proposal-decorators": "^7.14.2",
        "@babel/preset-env": "^7.14.1",
        "@babel/preset-typescript": "^7.13.0",
        "@commitlint/cli": "^12.1.1",
        "@commitlint/config-conventional": "^12.1.1",
        "@goparrot/eslint-config": "^1.0.0",
        "@types/jest": "^26.0.23",
        "@types/node": "^15.0.2",
        "@types/qs": "^6.9.6",
        "axios": "^0.21.1",
        "axios-mock-adapter": "^1.19.0",
        "axios-retry": "3.1.9",
        "class-transformer": "0.3.1",
        "deepmerge": "^4.2.2",
        "husky": "^6.0.0",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.4",
        "prettier": "^2.2.1",
        "qs": "^6.10.1",
        "reflect-metadata": "^0.1.13",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.4"
    }
}
